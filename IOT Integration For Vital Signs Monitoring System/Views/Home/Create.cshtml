@model IOT_Integration_For_Vital_Signs_Monitoring_System.Models.Patients;


<div class="form-container">
    <h2>Enter Patient's Details</h2>
    <a href="javascript:history.back()" class="back-btn">← Back</a>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="custom-form">

        <label>Name:</label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="error-message"></span>

        <label>Last Name:</label>
        <input type="text" asp-for="LastName" />
        <span asp-validation-for="LastName" class="error-message"></span>

        <label>Gender:</label>
        <select asp-for="Gender">
            <option value="">-- Select Gender --</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other (Please Specify)</option>
        </select>
        <span asp-validation-for="Gender" class="error-message"></span>

        <label>Birthdate:</label>
        <input asp-for="Birthdate" type="date" />
        <span asp-validation-for="Birthdate" class="error-message"></span>

        <label>Address:</label>
        <input type="text" asp-for="Address" />
        <span asp-validation-for="Address" class="error-message"></span>

        <label>Profile Image:</label>
        <input type="file" name="ProfileImage" accept="image/*" />

        <button type="submit" class="action-btn submit">Submit</button>
    </form>
</div>
