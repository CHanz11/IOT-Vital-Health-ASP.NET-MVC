@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <div class="logout-container">
        <h1 class="logout-title">@ViewData["Title"]</h1>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="logout-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="logout-button">🔒 Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="logout-message">✅ You have successfully logged out of the application.</p>
        }
    </div>

</header>
