@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <div class="logout-container">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="logout-container">
                <h2 class="logout-title">Logout</h2>
                <p class="logout-message">Are you sure you want to logout?</p>

                <form class="logout-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="logout-button">🔒 Yes, Logout</button>
                    <a href="javascript:history.back()" class="cancel-link">← Cancel</a>
                </form>
            </div>

        }
        else
        {
            <p class="logout-message">✅ You have successfully logged out of the application.</p>
        }
    </div>
</header>
