@model IOT_Integration_For_Vital_Signs_Monitoring_System.Models.Patients

<div class="patient-card-container">
    <h2 class="patient-card-title">Patient Record</h2>

    <div class="patient-card-box">
        <!-- Top Section -->
        <div class="patient-card-header">
            <img src="@Url.Content(Model.ProfileImagePath != null ? "~/images/profiles/" + Model.ProfileImagePath : "~/images/profiles/default.png")"
                 alt="Profile Image" class="patient-card-img" />

            <div class="patient-card-basic">
                <div><strong>Name:</strong> @Model.Name @Model.LastName</div>
                <div><strong>Gender:</strong> @Model.Gender</div>
                <div><strong>Birthday:</strong> @Model.Birthdate.ToString("MMMM dd, yyyy")</div>
                <div><strong>ID:</strong> @Model.Id</div>
                <div><strong>Address:</strong> @Model.Address</div>
            </div>
        </div>

        <!-- Divider -->
        <div class="patient-card-divider"></div>

        <!-- Vitals Section -->
        <div class="patient-card-vitals">
            <div class="vital"><span>Weight:</span> @Model.Weight</div>
            <div class="vital"><span>Height:</span> @Model.Height</div>
            <div class="vital"><span>Temp:</span> @Model.Temperature °C</div>
            <div class="vital"><span>BP:</span> @Model.BloodPressure</div>
            <div class="vital"><span>BMI:</span> @Model.BMI</div>
        </div>
    </div>

    <a asp-action="AddData" asp-route-id="@Model.Id" class="patient-card-btn">➕ Add Vital Data</a>
</div>





<h3 style="text-align:center; margin-top: 2rem;">Vital Records</h3>

<table class="modern-table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Weight</th>
            <th>Height</th>
            <th>Temp</th>
            <th>BP</th>
            <th>BMI</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in ViewBag.Records)
        {
            <tr>
                <td>@record.UpdatedDate.ToString("MMMM dd, yyyy")</td>
                <td>@record.Weight</td>
                <td>@record.Height</td>
                <td>@record.Temperature</td>
                <td>@record.BloodPressure</td>
                <td>@record.BMI</td>
            </tr>
        }
    </tbody>
</table>











