@model IEnumerable<IOT_Integration_For_Vital_Signs_Monitoring_System.Models.Patients>

<div class="login-container">
    <h2>Patient Record</h2>
</div>

<table class="modern-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>DATE</th>
            <th>TIME</th>
            <th>ACTIONS</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.Name @patient.LastName</td>
                <td>@patient.UpdatedDate.ToString("MMMM dd, yyyy")</td>
                <td>@patient.UpdatedDate.ToString("hh:mm tt")</td>
                <td class="action-buttons">
                    <a asp-action="Details" asp-route-id="@patient.Id" class="action-btn view">View</a>
                    <a asp-action="Edit" asp-route-id="@patient.Id" class="action-btn edit">Edit</a>
                    <a asp-action="Delete" asp-route-id="@patient.Id" class="action-btn delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>











