@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<div class="login-container">
    <h2>Reset Your Password</h2>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="validation-message"></span>
        </div>

        <div class="form-group">
            <button id="login-submit" type="submit">Reset Password</button>
        </div>

        <div class="form-links">
            <a asp-page="./Login">Back to Login</a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
