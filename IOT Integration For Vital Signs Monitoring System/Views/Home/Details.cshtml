@model IOT_Integration_For_Vital_Signs_Monitoring_System.Models.Patients

<div class="container">
    <h2>PATIENT RECORD</h2>


    <div class="grey-box">


        <div class="row">

            <div class="column">
                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                {
                    <div>
                        <img src="@Url.Content("~/images/profiles/" + Model.ProfileImagePath)" alt="Profile Image" width="100" height="100" />
                    </div>
                }
                else
                {
                    <div>
                        <img src="@Url.Content("~/images/profiles/default.png")" alt="Profile Image" width="100" height="100" />
                    </div>
                }
            </div>
            <div class="column">
               <strong>Name: @Model.Name @Model.LastName</strong>
            </div>
            <div class="column">
               <strong>Gender:</strong> @Model.Gender
             </div>
            <div class="column">
                    <strong>Birthday:</strong> @Model.Birthdate.ToString("MMMM dd, yyyy")
            </div>
        </div>
        <div class="row">
            <div class="column">
                <strong>ID Number: @Model.Id</strong>
             </div>
            <div class="column">
                <strong>Address: @Model.Address</strong>
            </div>
         </div>
         <div class="row">
            <div class="column">
                <strong>Weight:</strong> @Model.Weight
            </div>
            <div class="column">
                <strong>Height:</strong> @Model.Height
            </div>
            <div class="column">
                <strong>Temperature:</strong> @Model.Temperature °C
            </div>
            <div class="column">
                <strong>Blood Pressure:</strong> @Model.BloodPressure
            </div>
            <div class="column">
                    <strong>BMI:</strong> @Model.BMI
            </div>
         </div>
    </div>

    <a asp-action="AddData" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Add Vital Data</a>

</div>
    
<h3 class="mt-4">Vital Records</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Weight</th>
            <th>Height</th>
            <th>Temp</th>
            <th>BP</th>
            <th>BMI</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in ViewBag.Records)
        {
            <tr>
                <td>@record.UpdatedDate.ToString("MMMM dd, yyyy")</td>
                <td>@record.Weight</td>
                <td>@record.Height</td>
                <td>@record.Temperature</td>
                <td>@record.BloodPressure</td>
                <td>@record.BMI</td>
            </tr>
        }
    </tbody>
</table>











