@model IOT_Integration_For_Vital_Signs_Monitoring_System.Models.Patients

<div class="form-container">
    <h2>Edit Patients Data</h2>
    <a href="/Home" class="back-btn">← Back to List</a>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="custom-form">
        <input type="hidden" asp-for="Id" />

        <label>Name:</label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="error-message"></span>

        <label>Last Name:</label>
        <input type="text" asp-for="LastName" />
        <span asp-validation-for="LastName" class="error-message"></span>

        <label>Gender:</label>
        <select asp-for="Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other (Please Specify)</option>
        </select>

        <label>Birthdate:</label>
        <input asp-for="Birthdate" type="date" />
        <span asp-validation-for="Birthdate" class="error-message"></span>

        <label>Address:</label>
        <input type="text" asp-for="Address" required />
        <span asp-validation-for="Address" class="error-message"></span>

        <label>Profile Image:</label>
        <input type="file" name="ProfileImage" accept="image/*" />

        @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
        {
            <div style="margin-top: 10px;">
                <img src="@Url.Content("~/images/profiles/" + Model.ProfileImagePath)" alt="Profile Image" width="100" height="100" />
            </div>
        }

        <button type="submit" class="action-btn submit">Save Changes</button>
    </form>
</div>

