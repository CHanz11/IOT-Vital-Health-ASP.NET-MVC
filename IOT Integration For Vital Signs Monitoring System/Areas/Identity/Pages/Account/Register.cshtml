@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="register-container">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Create a new account</h2>
        <hr />

        <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
            <span asp-validation-for="Input.ConfirmPassword" class="validation-message"></span>
        </div>

        <div class="form-group">
            <button id="registerSubmit" type="submit">Register</button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
